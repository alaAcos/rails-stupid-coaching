<h1>The answer</h1>


<div class="answer you">
  <p><%=params[:question]%></p>
  <p>- You</p>
</div>

<div class="answer your-coach">
  <%if params[:question] == "I am going to work" %>
    <p><%="Great!"%><p>
  <%elsif params[:question].include?("?") %>
    <p><%="Silly question, get dressed and go to work!"%></p>
  <%else%>
    <p><%="I dont care, get dressed and go to work!"%></p>
  <%end%>
  <p>- Your Coach</p>
</div>

